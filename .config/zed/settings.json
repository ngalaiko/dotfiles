{
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "on_yank"
  },

  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  "theme": "Gruvbox Dark Soft",
  "buffer_font_size": 14,
  "buffer_font_family": "Berkeley Mono",
  "cursor_blink": false,
  "relative_line_numbers": true,
  "scrollbar": {
    "show": "never"
  },
  "tab_bar": {
    "show": false
  },

  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "inlayHints": {
          "maxLength": null,
          "lifetimeElisionHints": {
            "useParameterNames": true,
            "enable": "skip_trivial"
          },
          "closureReturnTypeHints": {
            "enable": "always"
          },
          "checkOnSave": {
            "command": "clippy"
          }
        }
      }
    }
  }
}
